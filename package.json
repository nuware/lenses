{
  "name": "@nuware/lenses",
  "version": "0.1.3",
  "description": "Lenses",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es",
    "lint": "eslint src/index.js",
    "build:es": "rollup -f esm -i src/index.js -o es/index.js -e @nuware/functions",
    "build:umd": "rollup -f umd -i src/index.js -o dist/index.js -n L -g @nuware/functions:F",
    "build:cjs": "rollup -f cjs -i src/index.js -o lib/index.js -e @nuware/functions",
    "build": "npm run build:es && npm run build:umd && npm run build:cjs",
    "release": "npm run clean && npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nuware/lenses.git"
  },
  "author": "Dmitry Dudin <dima@nuware.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nuware/lenses/issues"
  },
  "devDependencies": {
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "rollup": "^0.63.4"
  },
  "dependencies": {
    "@nuware/functions": "^0.1.4"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "no-multi-spaces": "off"
    }
  }
}
